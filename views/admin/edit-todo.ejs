<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <form class="product-form"
                    action="/admin/<% if(editing) { %>edit-todo<% } else { %>add-todo<% } %>" method="POST">
                    <div class="form-control">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title"
                            value="<% if(editing) { %><%=todo.title %><% } %>">

                    </div>
                    <div class="form-control">
                        <label for="subject">Subject</label>
                        <input type="text" name="subject" id="subject"
                            value="<% if(editing) { %><%= todo.subject %><% } %>">

                    </div>
                    <div class="form-control">
                        <label for="type">Type</label>

                        <select id="type" name="type">
                            <% if(!editing) { %>
                            <option value="" selected>Select an option</option>
                            <% } %>
                            <option value="church" <%= todo.type == 'church' ? 'selected' : ''%> >Church</option>
                            <option value="school" <%= todo.type == 'school' ? 'selected' : ''%>>School</option>
                            <option value="job" <%= todo.type == 'job' ? 'selected' : ''%>>Job</option>
                            <option value="family" <%= todo.type == 'family' ? 'selected' : ''%>>Family</option>
                        </select>
                    </div>
                    <div class="form-control">
                        <label for="dueDate">Due date</label>
                        <input type="date" name="dueDate" id="dueDate" min="2021-01-01" max="2030-12-31"
                            value="<% if(editing) { %><%= moment.utc(todo.dueDate).format('YYYY-MM-DD'); %><% } %>">
                    </div>
                    <div class="form-control">
                        <label for="description">Description</label>
                        <textarea name="description" id="description"
                            rows="5"><% if(editing) { %><%= todo.description %><% } %></textarea>
                    </div>

                    <% if(editing) { %>
                        <input type="hidden" value="<%= todo._id %>" name="todoId">
                        <% } %>
                            <button class="btn success" type="submit">
                                <% if (editing) { %> Update Todo <% } else { %> Add Todo <% } %>
                            </button>
                </form>
                <div id="message"></div>
            </main>

            <%- include('../includes/end.ejs') %>